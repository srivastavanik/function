# ===================================
# FUNCTION HACKATHON ENVIRONMENT VARIABLES
# ===================================
# This is an example file showing all required environment variables
# Copy this to .env and fill in your actual values

# ===================================
# GOOGLE CLOUD CONFIGURATION (REQUIRED)
# ===================================
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GCS_BUCKET_VIDEOS=fh-session-videos
GCS_BUCKET_RESULTS=fh-results
PUBSUB_TOPIC_VIDEO_UPLOADS=video-uploads
PUBSUB_SUBSCRIPTION_VIDEO_PROCESSOR=video-processor-sub

# ===================================
# ANTHROPIC API (REQUIRED)
# ===================================
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxx
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# ===================================
# API CONFIGURATION (REQUIRED)
# ===================================
SECRET_KEY=your-secret-key-here
API_KEY=your-api-key-here
CORS_ORIGINS=http://localhost:3000

# ===================================
# SERVICE URLS (REQUIRED)
# ===================================
NEXT_PUBLIC_API_URL=http://localhost:8080
AGENT_WEBHOOK_URL=http://localhost:3001/webhook

# ===================================
# COMPOSIO INTEGRATION (REQUIRED)
# ===================================
COMPOSIO_API_KEY=your-composio-api-key
GITHUB_OWNER=your-github-username
GITHUB_REPO=your-repo-name
GITHUB_TOKEN=ghp_xxxxxxxxxxxxx
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxxxx
SLACK_CHANNEL=#friction-alerts

# ===================================
# BASIC.TECH (OPTIONAL)
# ===================================
BASIC_API_KEY=your-basic-api-key
BASIC_USER_ID=your-basic-user-id

# ===================================
# VAPI VOICE (OPTIONAL)
# ===================================
VAPI_API_KEY=your-vapi-key
VAPI_PHONE_NUMBER=+1234567890
VAPI_ASSISTANT_ID=  # Optional, will be created automatically
VAPI_WEBHOOK_SECRET=your-webhook-secret

# ===================================
# TWILIO (OPTIONAL - FOR VAPI PHONE)
# ===================================
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
