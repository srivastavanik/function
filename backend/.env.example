# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# Google Cloud Platform
GOOGLE_CLOUD_PROJECT=function-hackathon
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Cloud Storage
GCS_BUCKET_NAME=fh-session-videos
GCS_RESULTS_BUCKET=fh-results

# Pub/Sub
PUBSUB_TOPIC_VIDEO_UPLOADS=video-uploads
PUBSUB_SUBSCRIPTION_VIDEO_PROCESSOR=video-processor-sub

# Firestore
FIRESTORE_COLLECTION_SESSIONS=sessions

# Anthropic API
ANTHROPIC_API_KEY=your-anthropic-api-key

# Security
API_KEY=your-api-key-for-uploads

# Server Configuration
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes
ALLOWED_EXTENSIONS=mp4,avi,mov,mkv

# Cloud Run Configuration
PORT=8080

# Agent Integration
AGENT_WEBHOOK_URL=http://localhost:3001
